<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.paypaychallenge">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PayPayChallengeApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@drawable/ic_banknote"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_banknote"
        android:supportsRtl="true"
        android:theme="@style/Theme.PayPayChallenge">

        <activity android:name=".ui.SplashScreenActivity"
            android:theme="@style/AppTheme.Launcher" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.CurrencyConverterActivity"
            android:configChanges="orientation|screenSize" />

    </application>
</manifest>